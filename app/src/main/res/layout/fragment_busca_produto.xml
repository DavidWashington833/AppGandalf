<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundcarrinhovazio"
    tools:context="com.storegandalf.david.gandalf.BuscaProdutoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundMascara"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtBuscaProduto"
                style="@style/TextView"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextView" />

            <Button
                android:id="@+id/btnBusca"
                style="@style/Buttons"
                android:layout_width="76dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="0dp"
                android:drawableTop="@drawable/iconbuscainvertlt" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/list_produto"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
