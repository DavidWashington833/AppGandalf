<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcarrinhovazio"
    tools:context="com.storegandalf.david.gandalf.CarrinhoVazioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundMascara"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">


            <TextView
                style="@style/TextDestaque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Ops! Parece que você não tem itens adicionados em seu carrinho." />


            <TextView
                style="@style/TextApoio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Clique no botão abaixo para voltar à loja" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button2"
                    style="@style/Buttons"
                    android:text="Voltar à Loja" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
