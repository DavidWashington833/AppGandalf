<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.gandalf.BuscaProdutoFragment">

    <EditText
        android:id="@+id/txtBuscaProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:text="lum"
        />

    <Button
        android:id="@+id/btnBusca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtBuscaProd"
        android:layout_alignBottom="@+id/txtBuscaProd"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:layout_weight="1"
        android:text="GO" />

    <ListView
        android:id="@+id/list_produto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnBusca"
        android:layout_marginTop="29dp" />


</RelativeLayout>
