<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.gandalf.CheckoutFragment01">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirme seus Dados"
            android:textAlignment="textStart"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColorLink="@color/colorAqua" />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone"
            android:textColorLink="@color/colorAqua" />

        <EditText
            android:id="@+id/et_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Data de Nascimento"
            android:inputType="date"
            android:textColorLink="@color/colorAqua" />

        <Button
            android:id="@+id/bt_editar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:text="Editar"
            android:textColor="@color/colorAqua" />

        <TextView
            android:id="@+id/tx_selecEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione o Endereço"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tx_tipoEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo do Endereço"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tx_ruaEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rua do Endereço, 00" />

        <TextView
            android:id="@+id/tx_bairroEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bairro do Endereço, Cidade" />

        <TextView
            android:id="@+id/tx_cepEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CEP do Endereço" />

        <Button
            android:id="@+id/bt_trocar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:text="Trocar"
            android:textColor="@color/colorAqua" />

        <Button
            android:id="@+id/bt_next1"
            style="@style/Buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:text="Proxima Etapa" />

    </LinearLayout>
</FrameLayout>
