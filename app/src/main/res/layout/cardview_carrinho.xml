<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <EditText
            android:id="@+id/hiddenIdProdCarrinho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imagemProdCart"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNomeProdCart"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:text="Nome do Produto"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/txtQtd"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtPrecoCart"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="R$00,00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#00bcd4" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVisualizarCarrinho"
                    style="@style/Buttons"
                    android:layout_width="145dp"
                    android:layout_height="55dp"
                    android:text="Visualizar" />

                <Button
                    android:id="@+id/btnRemoverProduto"
                    style="@style/ButtonsNullSecundario"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/iconexcluir"
                    android:gravity="right|center_vertical|center"
                    android:paddingBottom="0dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
