<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmapa"

    tools:context="com.example.david.gandalf.CadastroActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            style="@style/TextDestaque"
            android:gravity="left"
            android:text="Em qual planice você mora?" />

        <TextView
            style="@style/TextApoio"
            android:layout_marginTop="0dp"
            android:gravity="left"
            android:text="Agora que sabemos quem você é,nos mostre no mapa qual é seu endereço" />

        <TextView
            android:text="CEP"
            style="@style/Label" />
        <EditText
            android:id="@+id/cadastro_cep"
            android:inputType="text"
            android:hint="00000-000"
            style="@style/TextView" />

        <TextView
            android:text="Endereço"
            style="@style/Label" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center|top"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/cadastro_endereco"
                style="@style/TextView"
                android:layout_width="255dp"
                android:hint="Rua de Exemplo"
                android:inputType="text" />
            <EditText
                android:id="@+id/cadastro_numero"
                android:inputType="text"
                android:hint="Nº"
                style="@style/TextView"/>
        </LinearLayout>


        <TextView
            android:text="Cidade"
            style="@style/Label" />
        <EditText
            android:id="@+id/cadastro_cidade"
            android:inputType="text"
            android:hint="Cidade Nórdica"
            style="@style/TextView" />


        <TextView
            android:text="Logradouro"
            style="@style/Label" />
        <EditText
            android:id="@+id/cadastro_logradouro"
            android:inputType="text"
            android:hint="Logradouro"
            style="@style/TextView" />


        <TextView
            android:text="Logradouro"
            style="@style/Label" />
        <EditText
            android:id="@+id/cadastro_complemento"
            android:inputType="text"
            android:hint="Complemento"
            style="@style/TextView" />

        <TextView
            android:text="Logradouro"
            style="@style/Label" />
        <EditText
            android:id="@+id/cadastro_pais"
            android:inputType="text"
            android:hint="Pais"
            style="@style/TextView" />


        <TextView
            android:text="UF"
            style="@style/Label" />
        <EditText
            android:id="@+id/cadastro_uf"
            android:inputType="text"
            android:hint="Pais"
            style="@style/TextView" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/cadastro_proximo_pt2"
            android:text="Próxima Etapa"
            style="@style/Buttons" />
    </LinearLayout>

</LinearLayout>