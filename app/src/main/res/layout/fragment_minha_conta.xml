<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundpt3"
    tools:context="com.example.david.gandalf.MinhaContaFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/backgroundMascara"
                android:gravity="top|right"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/BgTitulo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/TextTitulo"
                        android:text="Informações Básicas" />
                </LinearLayout>

                <TextView
                    style="@style/Label"
                    android:layout_marginBottom="0dp"
                    android:text="Nome Completo" />

                <EditText
                    android:id="@+id/minha_conta_nome"
                    style="@style/TextInfos"
                    android:text="Felipe A. Miconi" />

                <TextView
                    style="@style/Label"
                    android:layout_marginBottom="0dp"
                    android:text="Data de Nascimento" />

                <EditText
                    android:id="@+id/minha_conta_nascimento"
                    style="@style/TextInfos"
                    android:text="15/01/1997" />

                <TextView
                    style="@style/Label"
                    android:layout_marginBottom="0dp"
                    android:text="CPF" />

                <EditText
                    android:id="@+id/minha_conta_cpf"
                    style="@style/TextInfos"
                    android:text="466.854.508-27" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/backgroundMascara"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/BgTitulo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/TextTitulo"
                        android:text="Informações de Contato" />
                    <Button
                        android:id="@+id/btnEditarContato"
                        style="@style/ButtonsEdit"
                        android:text="Editar" />
                </LinearLayout>

                <TextView
                    style="@style/Label"
                    android:layout_marginBottom="0dp"
                    android:text="Celular" />

                <TextView
                    android:text="Telefone Residencial"
                    style="@style/Label" />
                <EditText
                    android:id="@+id/minha_conta_residencial"
                    android:inputType="number"
                    android:hint="(XX) 0000-0000"
                    style="@style/TextView" />

                <TextView
                    android:text="Telefone Comercial"
                    style="@style/Label" />
                <EditText
                    android:id="@+id/minha_conta_comercial"
                    android:inputType="number"
                    android:hint="(XX) 0000-0000"
                    style="@style/TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/backgroundMascara"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/BgTitulo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/TextTitulo"
                        android:text="Endereço Principal" />
                    <Button
                        style="@style/ButtonsEdit"
                        android:text="Editar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="left|top"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Label"
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:text="País" />
                    <TextView
                        android:text="UF"
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="left|top"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/minha_conta_pais"
                        style="@style/TextView"
                        android:layout_width="255dp"
                        android:hint="Digite seu país aqui"
                        android:inputType="text" />
                    <EditText
                        android:id="@+id/minha_conta_uf"
                        android:inputType="text"
                        android:hint="UF"
                        style="@style/TextView" />
                </LinearLayout>

                <TextView
                    android:text="CEP"
                    style="@style/Label" />
                <EditText
                    android:id="@+id/minha_conta_cep"
                    android:inputType="text"
                    android:hint="00000-000"
                    style="@style/TextView" />

                <TextView
                    android:text="Endereço"
                    style="@style/Label" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/minha_conta_rua"
                        style="@style/TextView"
                        android:layout_width="255dp"
                        android:hint="Rua de Exemplo"
                        android:inputType="text" />
                    <EditText
                        android:id="@+id/minha_conta_numero"
                        android:inputType="text"
                        android:hint="Nº"
                        style="@style/TextView"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/backgroundMascara"
                android:gravity="center|top"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
