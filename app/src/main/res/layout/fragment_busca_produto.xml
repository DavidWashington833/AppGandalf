<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundcarrinhovazio"
    tools:context="com.example.david.gandalf.BuscaProdutoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundMascara"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtBuscaProduto"
                style="@style/TextView"
                android:layout_width="272dp"
                android:layout_height="73dp"
                android:layout_marginLeft="0dp"
                android:inputType="textPersonName" />


            <Button
                android:id="@+id/btnBusca"
                style="@style/Buttons"
                android:layout_height="66dp"
                android:drawableStart="@drawable/iconbuscainvertlt"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
